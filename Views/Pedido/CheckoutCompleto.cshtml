@model Pedido
<br />
<div class="jumbotron">
    <div class="container">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente : <strong>@Model.Nome</strong>
            <p>Data do Pedido :  <strong>@Model.PedidoEnviado</strong>
            <p>Número do Pedido   : <strong>@Model.PedidoId</strong></p>
            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Produto</th>
                    <th>Preço</th>
                </tr>
                @foreach (var item in Model.PedidoItens)
                {
                    <tr>
                        <td><img src="@item.Produto.ImagemUrl" width="100" height="100" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Produto.Nome</td>
                        <td>@item.Produto.Preco</td>
                    </tr>
                }
            </table>
            <h4>Valor Total do Pedido: <strong>@Model.PedidoTotal</strong></h4>
        </div>
    </div>
</div>