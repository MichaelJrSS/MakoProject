@model ProdutoListViewModel

<div><h2>@Model.CategoriaAtual</h2></div>

@foreach (var produto in Model.Produtos)
{
    <div class="col-sm-1 col-lg-4 col-md-2">
        <div class="thumbnail">
            <img src="@produto.ImagemUrl"class="img-rounded" alt=""/>
        </div>
       
        <div class="caption">
            <h3 class="pull-righ"> @produto.Preco.ToString("c")</h3>
            <h3>
                @produto.Nome
            </h3>
            <p>@produto.Descricao</p>
        </div>
         
        
    </div>

}