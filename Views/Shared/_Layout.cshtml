<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cutelaria Mako</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>Cutelaria Mako</b></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><b>Home</b></a>
                        </li>

                        <li>
                            @await Component.InvokeAsync("CategoriaMenu")
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Contato" asp-action="Index"><b>Contato</b></a>
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @await Component.InvokeAsync("CarrinhoCompraResumo")
                            }
                        </li>
                    </ul>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                    }
                    @await Html.PartialAsync("_LoginPartial")


                    <form class="form-check-inline my-2 my-lg-0" asp-controller="Produto" asp-action="Search" method="get">
                        <input type="search" class="form-control mr-sm-2" placeholder="Pesquisar Produtos" name="searchString" value="@ViewData["searchString"]">

                    </form>
                </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Cutelaria Mako</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
